@{
    ViewData["Title"] = "Almacen";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Home.css" />
}

<header>
    <nav>
        <ul>
            <div class="left-links">
            <li><a asp-controller="Home" asp-action="Index">Inicio</a></li>
            <li><a asp-controller="Home" asp-action="Mapa">Mapa</a></li>
            <li><a asp-controller="Tienda" asp-action="Index">Tiendas</a></li>
            <li><a asp-controller="Almacen" asp-action="Index">Almacenes</a></li>
            <li><a asp-controller="Ruta" asp-action="Index">Rutas</a></li>
            </div>
            <div class="right-link">
            <li><a asp-controller="Login" asp-action="Logout">Cerrar Sesión</a></li>
            </div>
        </ul>
    </nav>
    <div style="height: 5rem;"></div>
    <img src="~/img/Logo.png" alt="">
</header>


<section style="display: flex; width: 100%; align-items: center; justify-content: center;margin-bottom: 5rem;">
    <div style="margin-top:10px">
        <div class="container-xxl">
            <div class="card shadow border-0 mt-4" style="width:100%">

                <div class="card-header bg-danger bg-gradient ml-0 py-3">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2 class="text-white py-2">Lista de Almacenes</h2>
                        </div>
                    </div>
                </div>

                <div class="card-body p-2">
                    <div class="container">
                        <div class="row pt-4 pb-3">
                            <div class="col-12 text-end">
                                <a asp-controller="Almacen" asp-action="Create" class="btn btn-success">
                                    <i class="bi bi-plus-circle"></i> Crear nuevo Almacén
                                </a>
                            </div>
                        </div>
                        <table id="tblAlmacenes" class="table table-bordered table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Almacen</th>
                                    <th>Nombre del Almacen</th>
                                    <th>Latitud</th>
                                    <th>Longitud</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/Almacenes.js"></script>
}