@{
    ViewData["Title"] = "Mapa";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Home.css" />
    <style>
        .iframe-container {
            position: relative;
            width: 100%;
            padding-bottom: 62.25%; /* Aspect ratio: 373.5 / 600 = 0.6225 or 62.25% */
            height: 0;
            overflow: hidden;
        }

            .iframe-container iframe {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                border: 0;
            }
    </style>
}

